<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneraltvShows"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/tvtitleShows"
        android:layout_width="406dp"
        android:layout_height="48dp"
        android:background="#9EEDE9"
        android:fontFamily="monospace"
        android:text="     General TV Shows"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <TextView
        android:id="@+id/Facts4tvshowsDisplay"
        android:layout_width="292dp"
        android:layout_height="125dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:textSize="20dp"
        android:text="facts display"
        android:fontFamily="monospace"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvtitleShows" />

    <Button
        android:id="@+id/moreHintsShowsbtn"
        android:layout_width="281dp"
        android:layout_height="71dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="36dp"
        android:background="#C17DEA"
        android:fontFamily="monospace"
        android:text="I NEED ANOTHER HINT"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Facts4tvshowsDisplay" />

    <Button
        android:id="@+id/guessShowbtn"
        android:layout_width="281dp"
        android:layout_height="71dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="20dp"
        android:background="#C17DEA"
        android:fontFamily="monospace"
        android:text="guess show"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moreHintsShowsbtn" />

    <Button
        android:id="@+id/giveupShowsbtn"
        android:layout_width="281dp"
        android:layout_height="71dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="20dp"
        android:background="#C17DEA"
        android:fontFamily="monospace"
        android:text="give up"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guessShowbtn" />

    <EditText
        android:id="@+id/et2hidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="280dp"
        android:ems="10"
        android:hint="guess show"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="#B1AFAF"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="SUBMIT"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/showImage"
        android:layout_width="235dp"
        android:layout_height="202dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>